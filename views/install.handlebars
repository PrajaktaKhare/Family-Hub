<style>
    h2{
        text-align: center;
        width: 100%;
    }
  form {
    max-width: 500px;
    margin: 30px auto;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #333;
  }

  select {
    width: 100%;
    padding: 8px 12px;
    border-radius: 4px;
    border: 1px solid #ccc;
    font-size: 16px;
  }

  select[multiple] {
    height: 200px;
  }

  button {
    margin-top: 20px;
    width: 100%;
    padding: 12px;
    background-color: #0078d7;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #005a9e;
  }

  option {
    padding: 5px;
  }
</style>


<h2>Install App on Devices</h2>

<form action="/api/apps/install" method="POST">
  <label for="appName">Select App:</label>
  <select name="app" id="appName" required>
    <option value="" disabled selected>Select an app</option>
    {{#each apps}}
      <option value="{{this.name}}">{{this.name}} ({{this.category}})</option>
    {{/each}}
  </select>

  <br/><br/>


  {{!--show devices list to select --}}

  <label for="devices">Select Devices (Ctrl/Cmd + Click for multiple):</label>
  <select name="devices" id="devices" multiple size="6" required>
    {{#each devices}}
      <option value="{{this._id}}">{{this.name}} ({{this.owner.name}})</option>
    {{/each}}
  </select>

  <br/><br/>

  <button type="submit">Install App</button>
</form>

